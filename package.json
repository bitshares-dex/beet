{
  "name": "beet",
  "productName": "Beet",
  "version": "0.3.0",
  "description": "Beet is a stand-alone key-manager and signing app for BitShares.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "buildcss": "node-sass --include-path src/scss src/scss/beet.scss src/css/beet.css",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "postpackage": "node write_digest.js"
  },
  "keywords": [],
  "author": "clockworkgr",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "nsis"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "beet"
      },
      "electronInstallerDebian": {},
      "github_repository": {
        "owner": "bitshares",
        "name": "beet",
        "draft": true
      }
    }
  },
  "build": {
    "nsis": {
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "dependencies": {
    "@panter/vue-i18next": "^0.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "bitsharesjs": "^1.8.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "chalk": "^2.4.2",
    "crypto-js": "^3.1.9-1",
    "dexie": "^2.0.4",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.2.4",
    "elliptic": "^6.4.1",
    "i18next": "^13.1.0",
    "i18next-node-fs-backend": "^2.1.1",
    "otpauth": "^3.2.2",
    "readline": "^1.3.0",
    "typeface-rajdhani": "0.0.54",
    "typeface-roboto": "0.0.54",
    "uuid": "^3.3.2",
    "vue": "^2.5.21",
    "vue-multiselect": "^2.1.3",
    "vue-router": "^3.0.2",
    "vueify": "^9.4.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.3",
    "electron-forge-maker-nsis": "^20.37.0",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^5.12.0",
    "eslint-plugin-vue": "^5.1.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "vue-style-loader": "^4.1.2",
    "webpack": "^4.28.1"
  }
}
